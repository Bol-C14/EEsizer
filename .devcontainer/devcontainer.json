{
  "name": "EEsizer (Ubuntu + Python + ngspice)",

  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/EEsizer",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  // 自动安装本地包（含 dev 依赖），确保 pytest/import 开箱即用
  "postCreateCommand": "python -m pip install --upgrade pip && python -m pip install -e '.[dev]'",

  "containerEnv": {
    "PYTHONUNBUFFERED": "1"
  }
}
