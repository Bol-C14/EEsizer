{
  "name": "EEsizer (Ubuntu + Python + ngspice)",

  // ✅ 用 image，禁用 devcontainer 的 build 流程
  "image": "eesizer-dev:local",

  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/EEsizer",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  // 自动安装本地包（含 dev 依赖），确保 pytest/import 开箱即用
  "postCreateCommand": "pip install -e .[dev]",

  "containerEnv": {
    "PYTHONUNBUFFERED": "1"
  }
}
