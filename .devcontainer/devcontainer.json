{
  "name": "EEsizer (Ubuntu + Python + ngspice)",

  // ✅ 用 image，禁用 devcontainer 的 build 流程
  "image": "eesizer-dev:local",

  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/EEsizer",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },

  // 如果你已经在 Dockerfile 里装好了 jupyter/ipykernel，可以把这个删掉或简化
  "postCreateCommand": "",

  "containerEnv": {
    "PYTHONUNBUFFERED": "1"
  }
}
